@model Epilogger.Web.Models.WidgetCheckinsViewModel
@{
    Layout = "_EmbedLayout.cshtml";
    ViewBag.Title = "";
    
}

@if (Model.Width==100 && Model.Height==100)
{
    @: <div style="@string.Format("height:100%; width: 100%;") overflow-x: hidden; overflow-y: auto;" class="bbackground" id="wrapper">
}
else
{
    @: <div style="@string.Format("height:{0}px; width: {1}px;", @Model.Height, @Model.Width); overflow: hidden;" class="bbackground" id="wrapper">
}
    <header class="hbackground htext ">
		<img src="http://a0.twimg.com/profile_images/2355397327/image_normal.jpg" width="42" height="42" /> 
		<span id="subtitle">What's going on at</span>
		<h1 id="title"><a href="">Spark entre en scène à Osheaga</a></h1>
		
		<hr></hr>
		
		<nav>
			@Html.Partial("_widgetMenu", new Epilogger.Web.Models.WidgetMenuViewModel() { EventSlug = Model.EventSlug, width = Model.Width, height = Model.Height, returnto = 1 })
		</nav>
	</header>

   @if (Model.Width==100 && Model.Height==100)
    {
        @: <section id="all-checkins" class="contentContainer  @(Model.Width >= 500 ? "horizontal" : "")"> <!-- style="@string.Format("height:100%;"); overflow-y: auto; overflow-x: hidden;" -->
    }
    else
    {
        @: <section id="all-checkins" class="contentContainer  @(Model.Width >= 500 ? "horizontal" : "")"> <!-- style="@string.Format("height:{0}px;", @Model.Height - 92); overflow-y: auto; overflow-x: hidden;" -->
    }
        <ul class="checkinList">
            @foreach (var theCheckIn in Model.Checkins)
            {
                <li>
                    @{Epilogger.Data.Tweet thisTweet = theCheckIn.Tweets.FirstOrDefault(t => t.ID == theCheckIn.TweetID);}
                    <a href="@theCheckIn.FourSquareCheckInURL" target="_blank" title="@if (thisTweet.FromUserScreenName != null){@string.Format("@{0}", thisTweet.FromUserScreenName)}">
                        <img src="@if (thisTweet != null)
                                    {
                                        @Url.Content(thisTweet.ProfileImageURL)
                                    }" height="48" width="48" alt="@if (thisTweet != null)
                                                                    {
                                                                        @thisTweet.FromUserScreenName
                                                                    }
                                                                    " /></a>
                </li>
            }
        </ul>
    </section>
	
	<footer>
		<a href="http://epilogger.com" target="_blank"><img src="/Public/images/widget/epilogger.png" alt="Epilogger logo"/></a>
		
        @Html.Partial("_EpiloggerCounts", @Model.EpiloggerCounts)
	</footer>
</div>