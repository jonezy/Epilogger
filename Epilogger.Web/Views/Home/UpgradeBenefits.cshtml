@{
    ViewBag.Title = "Epilogger - Upgrade Benefits";
    Layout = "~/Views/Shared/_InteriorLayoutNoBC.cshtml";
}

<h1 class="center">Upgrade for $50! Get premium features designed to foster<br /> community engagement before, during, and after your event.</h1>

<table class="benefitsTable">
    <tr class="headerRow">
        <th class="column1"></th>
        <th class="basicHeading column2">Basic (free)</th>
        <th class="premiumHeading column2">Premium ($50/event)</th>
    </tr>
    
    
    <tr>
        <td>
            <img src="/Public/images/Upgrade/icon-feature-searchterms.png" alt="" class="benefitImage" />
            <h2>Multiple Search Terms</h2>
            <p>Sometimes attendees don't use the right hashtag! Capture tweets about your event without the official hashtag in them.</p>
        </td>
        <td><img src="/Public/images/Upgrade/icon-featurecheckmark.png" alt="" class="benefitImageCheck" /></td>
        <td><img src="/Public/images/Upgrade/icon-featurecheckmark.png" alt="" class="benefitImageCheck" /></td>
    </tr>
    
    
    <tr>
        <td>
            <img src="/Public/images/Upgrade/icon-feature-livemode.png" alt="" class="benefitImage" />
            <h2>Live Mode</h2>
            <p>Contributor wall optimized for large screens on site at events. View a full, real time feed of event content and let your attendees see their name in lights.</p>
        </td>
        <td class="center" style="padding-top: 50px;">preset themes</td>
        <td class="center" style="padding-top: 50px;">fully customizable</td>
    </tr>
    
    
    <tr>
        <td>
            <img src="/Public/images/Upgrade/icon-featureembed.png" alt="" class="benefitImage" />
            <h2>Embed Your Event</h2>
            <p>Embed the Epilogger widget into your blog or website with our simple drop-in code.</p>
        </td>
        <td><img src="/Public/images/Upgrade/icon-featurecheckmark.png" alt="" class="benefitImageCheck" /></td>
        <td><img src="/Public/images/Upgrade/icon-featurecheckmark.png" alt="" class="benefitImageCheck" /></td>
    </tr>
    <tr>
        <td>
            <img src="/Public/images/Upgrade/icon-feature-eventbrite.png" alt="" class="benefitImage" />
