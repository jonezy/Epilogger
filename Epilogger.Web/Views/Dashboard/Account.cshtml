@model Epilogger.Web.Models.DashboardAccountViewModel

@{
    Layout = "~/Views/Shared/_InteriorLayout.cshtml";
    ViewBag.Title = "Account";
}


<div id="dashboard-nav">
    @Html.Partial("Menu")
</div>

<div id="dashboard-content">
<h2>Account Status</h2>

<div class="account-overview clearfix">
    <table>
        <tr>
            <td class="label">EMAIL ADDRESS:</td>
            <td>@Model.EmailAddress</td>
        </tr>
        <tr>
            <td class="label">MEMBER SINCE:</td>
            <td>@Html.DisplayFor(e => e.CreatedDate)</td>
        </tr>
    </table>

    @Html.ActionLink("+ Edit My Profile", "index", "account", null, new { @class = "blue-action-button" })
</div>
</div>