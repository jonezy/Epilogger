@using Epilogger.Web;
@model System.DateTime?
           
<div class="datetime-container">
    <div class="left" style="padding:2px;">
        @Html.TextBox("", Model.HasValue ? Model.Value.ToShortDateString() : "", new { @class = "datepicker",@style="margin-bottom:0px !important;", @maxlength = "10" })
    </div>
    <div class="left" style="padding:2px;">
        @Html.TextBox("", Model.HasValue ? new DateTime(Model.Value.Ticks).ToString("h:mm tt") : "", new { @class = "timedropdown", @style="margin-bottom:0px !important;", @maxlength = "8" })
    </div>
</div>