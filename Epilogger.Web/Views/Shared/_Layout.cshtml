        head.js('@Url.Content("~/Public/js/jquery.cookie.js")');
        head.js('@Url.Content("~/Public/js/jquery.tweet.js")',function() {
            $(".tweet").tweet({
                username: "epilogger",
                join_text: "auto",
                avatar_size: 32,
                count: 2,
                loading_text: "loading tweets...",
                template: "{text} >> {time}"
            });            
        });

        head.js('@Url.Content("~/Public/js/jquery.zrssfeed.min.js")', function() {
            $('#blog-posts').rssfeed('http://feeds.reuters.com/reuters/oddlyEnoughNews', {		        limit: 1	        });
