@model Epilogger.Data.Event

@{
    ViewBag.Title = "Timeline";
    Layout = "~/Views/Shared/_InteriorLayout.cshtml";
}

<div id="timeline-embed"></div>
    <script type="text/javascript">
        var timeline_config = {
            width: '100%',
            height: '600',
            debug: false,
            start_zoom_adjust: '0',                            //OPTIONAL TWEAK THE DEFAULT ZOOM LEVEL
            source: '@Url.Action("TimelineData", null, new { id = Model.EventSlug })',
            start_at_end: false,                          //OPTIONAL START AT LATEST DATE
            css: '/Public/js/Timeline/css/timeline.css',     //OPTIONAL PATH TO CSS
            js: '/Public/js/Timeline/js/timeline-min.js'    //OPTIONAL PATH TO JS
        }
    </script>
    <script type="text/javascript" src="/Public/js/Timeline/js/storyjs-embed.js"></script>
