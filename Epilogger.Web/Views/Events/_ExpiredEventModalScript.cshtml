@model Epilogger.Web.Models.ExpiredEventModalScriptViewModel

<script type="text/javascript" language="javascript">

    var isExpired = '@Model.IsExpired.ToString().ToLower()';

    if (isExpired) {
        $.colorbox({
            width: '40%', initialWidth: '40%', height: '40%', initialHeight: '40%', open: true, overlayClose: false, escKey: false, loop: false,
            opacity: 0.60, transition: 'none', speed: 0, close: '',
            href: '@Url.Action("ExpiredUpgradeNotice", "Events", new { id = Model.EventId })', onLoad: function () {
                $('#cboxClose').remove();
                $('#cboxOverlay').attr('style', 'opacity: 0.6; cursor: auto; top: 70px; z-index: 0 !important;');
            }
        });
    }

</script>