﻿@using Epilogger.Web;
@using Epilogger.Web.Models;
@model List<DashboardEventViewModel>
           
@foreach (var item in Model)
{
    <div class="dashboard-event-item clearfix">
        <div class="month-day">
            <div class="month">@Html.DisplayFor(e => item.StartDateTime, "Month")</div>    
            <h2>@Html.DisplayFor(e => item.StartDateTime, "Day")</h2>
            <div class="icon"></div>
        </div>
        <div class="event-content">
            <h6>@Html.ActionLink(item.Name, "details", "events", new { @id = item.ID }, null)</h6>
                
            <div class="event-content-time2">@Html.DisplayFor(e => item.StartDateTime, "Time")</div>
            @*Too long in most cases, looks like shit. Not important information*@
            @*<div class="event-content-searchterms2">@item.SearchTerms</div>*@
        </div>
        <div class="event-totals">
            <div class="total-tweets">@string.Format("{0:#,###}", item.TotalTweets)</div>
            <div class="total-media">@string.Format("{0:#,###}", item.TotalMedia)</div>
        </div>
    </div>

}
