@model Epilogger.Web.Models.CreateEventViewModel

@{
    ViewBag.Title = "Epilogger - Create Event";
}

<h2>Create Event</h2>

@Html.ValidationSummary("Please correct the following issues")
@using (Html.BeginForm("CreateEvent", "Events", FormMethod.Post)) {
    <p>Create Event fun time</p>
    <fieldset>
        <p>@Html.LabelFor(model => model.Name) @Html.TextBoxFor(model => model.Name)</p>
        
        <p>@Html.LabelFor(model => model.CollectionStartDateTime) @Html.EditorFor(model => model.CollectionStartDateTime)</p>
        <script type="text/javascript">
            head.ready(function () {
                $("#CollectionStartDateTime").AnyTime_picker(
                { format: "%M %d, %Y %l:%i %p" });
            });
        </script>
        
        
        
        <p>@Html.LabelFor(model => model.StartDateTime) @Html.EditorFor(model => model.StartDateTime)</p>
        <script type="text/javascript">
            head.ready(function () {
                $("#StartDateTime").AnyTime_picker(
                { format: "%M %d, %Y %l:%i %p" });
            });
        </script>
        
        <p>@Html.LabelFor(model => model.EndDateTime) @Html.EditorFor(model => model.EndDateTime)</p>
        <script type="text/javascript">
            head.ready(function () {
                $("#EndDateTime").AnyTime_picker(
                { format: "%M %d, %Y %l:%i %p" });
            });
        </script>

        <p>@Html.LabelFor(model => model.CollectionEndDateTime) @Html.EditorFor(model => model.CollectionEndDateTime)</p>
        <script type="text/javascript">
            head.ready(function () {
                $("#CollectionEndDateTime").AnyTime_picker(
                { format: "%M %d, %Y %l:%i %p" });
            });
        </script>


        <p>@Html.LabelFor(model => model.TimeZoneOffset) @Html.TextBoxFor(model => model.TimeZoneOffset)</p>
        
        <p>@Html.LabelFor(model => model.SearchTerms) @Html.TextBoxFor(model => model.SearchTerms)</p>
        
        
        <p><input type="submit" class="submit" value="Create Event" /></p>
    </fieldset>
}
