    ViewBag.Title = "Epilogger - " + Model.Name;
    
}

<div class="grid_8">
	<h1>@Model.Name</h1>
	<h2>@Model.SubTitle</h2>
			
	<p>@Html.Raw(Model.Description.Replace("\r", "<br />"))
        @if (Model.Description.Length > 266)
        { 
            @: ... (<a href="#">read more</a>)
        } </p>
</div>
	
