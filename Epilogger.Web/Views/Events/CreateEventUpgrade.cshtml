@using Epilogger.Web.Models
@model Epilogger.Data.Event
@{
    Layout = "~/Views/Events/_CreateEventLayout.cshtml";
    ViewBag.Title = "Create a new event | Epilogger";
}
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        parent.$.colorbox.resize({ width: 560, height: 520 });
    });
    
    function CloseAndRedirect(url) {
        parent.window.location = url;
    }

</script>

<div class="form_process4">
    <img src="/Public/images/CreateEvent/EventCreatedActive.png" alt="Private?" />
</div>


<div id="final_wrapper">
    <div style="height: 368px;">
        <div class="greyBox">
            @Html.CheckBox("Test", false, new { @class="fleft" })
            <div class="checkMargin">
                <h2><img src="/Public/images/CreateEvent/icon-private-sm.png" alt="" /> Make my event private</h2>
                <em>This is a premium feature. If you select this you’ll be taken to a payment screen to complete the upgrade process. Don't worry, your event info is already saved!</em>
            </div>
        
        </div>
    
        <h2>HERE'S WHAT ELSE YOU GET WHEN YOU UPGRADE YOUR EVENT:</h2>
        <ul class="upgradeFeatures">
            <li>
                <img src="/Public/images/CreateEvent/icon-featured-sm.png" alt="Featured" />
                <div class="tableText">
                    Featured on our website homepage and as the cover of our iphone app
                </div>
            </li>
            <li>
                <img src="/Public/images/CreateEvent/icon-livemode-sm.png" alt="Live Mode" />
                <div class="tableText">
                    Fully customizable Live Mode <br />(twitter wall)
                </div>
            </li>
        
            <li>
                <img src="/Public/images/CreateEvent/icon-verified-sm.png" alt="Verified" />
                <div class="tableText">
                    Verified badge on your event page
                </div>
            </li>
            <li>
                <img src="/Public/images/CreateEvent/icon-eventbrite-sm.png" alt="EventBright" />
                <div class="tableText">
                    Eventbrite ticketing
                </div>
            </li>
        
            <li>
                <img src="/Public/images/CreateEvent/icon-lifespan-sm.png" alt="Lifespan" />
                <div class="tableText">
                    A longer lifespan, keep your event active for a full year
                </div>
            </li>
            <li>
                <img src="/Public/images/CreateEvent/icon-moderate-sm.png" alt="Lifespan" />
                <div class="tableText">
                    Content Moderation
                </div>
            </li>
        
        

        </ul>
    </div>

    <div id="tweet_footer">
        <div class="dashed"></div>
        <div id="left">
        </div>
        <div id="right" class="finalRight">
            
            @Html.ActionImage("CreateEventFinal", "Events", new CreateFinalEventViewModel()
                                                            {
                                                                Name = Model.Name,
                                                                Subtitle = Model.SubTitle,
                                                                SearchTerms = Model.SearchTerms,
                                                                EventSlug = Model.EventSlug,
                                                                CollectionTime = "",
                                                                EventStartEndTime = "" 
                                                            }, "/Public/images/CreateEvent/StayWithBasicButton.png", "Stay with Basic")
            
            @Html.ActionImage("CreateEventFinal", "Events", new { }, "/Public/images/CreateEvent/UpgradeToPremium.png", "Upgrade to Premium")
        </div>
    </div>
    

</div>