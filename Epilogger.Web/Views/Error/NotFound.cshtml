@model Epilogger.Web.Models.SearchEventViewModel
@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title></title>
	<link rel="stylesheet" type="text/css" media="screen" href="css/master.css" />
	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"></script>
	<!--[if IE]>
<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
	<style>
body {
	margin:0;
	padding:0;
	background:#eee;
	font-family:helvetica, arial, sans-serif;
	font-size:10pt;
	color:#888;}
	
#header-container {
	padding:15px 0;
	background:#fff;}
	
#bg-teeth {
	background:url('../../Public/images/error/jaggies-trans.gif') repeat-x;
	height:7px}
	
#content, #header {
	width:80%;
	margin:auto}
	
#content {
	margin-top:25px}
	
h1 { 
	font-family:'interstateplusregular', sans-serif;
	font-size:34pt;
	font-weight:normal;
	margin:0 0 5px 0;
	padding-top:10px;
	text-transform:uppercase;
	color:#000}

h2 {
	font-family:'interstateplusregular', sans-serif;
	font-size:23pt;
	font-weight:normal;
	margin:0 0 25px 0;
	line-height:1.25em;
	color:#f413b8}
	
form {
	background:#fff;
	padding:3px;
	box-shadow:-1px -1px 1px #ccc;
	width:280px;
	text-align:right}

form input {
	border:0;
	font-family:helvetica, arial, sans-serif;
	font-weight:bold;
	font-size:11pt;
	vertical-align:middle;
	color:#808080;}

form input[type="text"] {
	width:85%}

@@font-face {
	font-family: 'interstateplusregular';
	src: url('../../Public/fonts/interstateplus_regular_cond-webfont.eot');
	src: url('../../Public/fonts/interstateplus_regular_cond-webfont.eot?#iefix') format('embedded-opentype'),
		 url('../../Public/fonts/interstateplus_regular_cond-webfont.woff') format('woff'),
		 url('../../Public/fonts/interstateplus_regular_cond-webfont.ttf') format('truetype'),
		 url('../../Public/fonts/interstateplus_regular_cond-webfont.svg#interstateplusregular') format('svg');
	font-weight: normal;
	font-style: normal;}
</style>
</head>
<body>
	<div id="header-container">
		<div id="header" align="center">
			<a href="http://epilogger.com">
				<img src="../../Public/images/error/logoSmall.png" /></a>
		</div>
	</div>
	<div id="bg-teeth">
	</div>
	<div id="outer-container">
		<div id="content">
			<div style="width: 350px; float: left">
				<h1>
					4-OH-4 NOES!</h1>
				<h2>
					This page doesn’t exist.<br />
					Here’s a cat video to make things better for you.</h2>
				 @using (Html.BeginForm("Search", "Home", FormMethod.Post, null))
					{
						@Html.TextBox("SearchTerm", null, new {@class = "remove-bottom", @title = "Find an event..."})
						<input type="image" src="../../Public/images/error/btn-search-home.png" />
					}
					<!--<input type="text" id="SearchTerm" value="Search for an event...	" />-->
					
				
				<p>
					(or go back to the <a href="http://epilogger.com">homepage</a>)</p>
			</div>
			<iframe width="500" height="375" src="http://www.youtube.com/embed/Q34z5dCmC4M" frameborder="0"
				allowfullscreen></iframe>
		</div>
</body>
</html>
